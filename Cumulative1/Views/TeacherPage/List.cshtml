@model List<Cumulative1.Models.Teacher>

@{
    ViewData["Title"] = "List of Teachers";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">List of Teachers</h2>

    <div class="d-flex justify-content-between mb-3">
        <a asp-controller="TeacherPage" asp-action="New" class="btn btn-success">Add New Teacher</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Teacher ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Employee Number</th>
                    <th>Hire Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.TeacherId</td>
                        <td>@teacher.TeacherFName</td>
                        <td>@teacher.TeacherLName</td>
                        <td>@teacher.EmployeeNumber</td>
                        <td>@teacher.TeacherHireDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-controller="TeacherPage" asp-action="Show" asp-route-id="@teacher.TeacherId" class="btn btn-primary btn-sm">
                                View Details
                            </a>
                            <form asp-controller="TeacherPage" asp-action="Delete" asp-route-id="@teacher.TeacherId" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this teacher?');">
                                    Delete
                                </button>
                            </form>
                            <a asp-controller="TeacherPage" asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-primary btn-sm">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            No teachers found in the database.
        </div>
    }
</div>

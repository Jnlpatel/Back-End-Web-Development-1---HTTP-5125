@model Cumulative1.Models.Teacher

@{
    ViewData["Title"] = "Edit Teacher";
}

<h2 class="text-primary mb-4">Edit Teacher</h2>

<div class="container">
    <!-- Display validation errors -->
    @if (ViewData.ModelState != null && !ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <strong>Validation Errors:</strong>
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <!-- Display custom error message -->
    @if (ViewData["Error"] != null)
    {
        <div class="alert alert-danger">
            <p>@ViewData["Error"]</p>
        </div>
    }

    <!-- Edit Teacher Form -->
    <form method="post" asp-action="Update" class="needs-validation">
        <input type="hidden" name="id" value="@Model.TeacherId" />
        <div class="form-group mb-3">
            <label asp-for="TeacherFName" class="form-label">First Name:</label>
            <input asp-for="TeacherFName" class="form-control" placeholder="Enter first name" />
            <span asp-validation-for="TeacherFName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TeacherLName" class="form-label">Last Name:</label>
            <input asp-for="TeacherLName" class="form-control" placeholder="Enter last name" />
            <span asp-validation-for="TeacherLName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EmployeeNumber" class="form-label">Employee Number:</label>
            <input asp-for="EmployeeNumber" class="form-control" placeholder="e.g., T12345" />
            <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TeacherHireDate" class="form-label">Hire Date:</label>
            <input asp-for="TeacherHireDate" type="date" class="form-control" />
            <span asp-validation-for="TeacherHireDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TeacherSalary" class="form-label">Salary:</label>
            <input asp-for="TeacherSalary" type="number" step="0.01" class="form-control" placeholder="Enter salary" />
            <span asp-validation-for="TeacherSalary" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Update Teacher</button>
        <a asp-action="Show" asp-route-id="@Model.TeacherId" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>

@section Scripts {
    <!-- Enable client-side validation -->
    <partial name="_ValidationScriptsPartial" />
}

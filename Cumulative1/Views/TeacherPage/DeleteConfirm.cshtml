@model Cumulative1.Models.Teacher

<h2>Confirm Delete</h2>

<p>Are you sure you want to delete the following teacher?</p>
<ul>
    <li>@Model.TeacherFName @Model.TeacherLName</li>
    <li>Employee Number: @Model.EmployeeNumber</li>
    <li>Hire Date: @Model.TeacherHireDate.ToShortDateString()</li>
    <li>Salary: $@Model.TeacherSalary</li>
</ul>

<form method="post" asp-action="Delete">
    <input type="hidden" asp-for="TeacherId" />
    <button type="submit">Delete</button>
    <a asp-action="List">Cancel</a>
</form>

@if (ViewData["Error"] != null)
{
    <p style="color:red">@ViewData["Error"]</p>
}
